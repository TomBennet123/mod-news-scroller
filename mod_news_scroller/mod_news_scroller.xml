<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.0" client="site" method="upgrade">
    <name>MOD_NEWS_SCROLLER</name>
    <author>Balogh Andr√°s</author>
    <creationDate>2025-10-27</creationDate>
    <copyright>Copyright (C) 2025. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>1.0.0</version>
    <description>MOD_NEWS_SCROLLER_DESCRIPTION</description>
    
    <files>
        <filename module="mod_news_scroller">mod_news_scroller.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_news_scroller.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_news_scroller.sys.ini</language>
        <language tag="hu-HU">hu-HU/hu-HU.mod_news_scroller.ini</language>
        <language tag="hu-HU">hu-HU/hu-HU.mod_news_scroller.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="category"
                    type="category"
                    extension="com_content"
                    multiple="true"
                    layout="joomla.form.field.list-fancy-select"
                    label="MOD_NEWS_SCROLLER_CATEGORY_LABEL"
                    description="MOD_NEWS_SCROLLER_CATEGORY_DESC"
                />
                <field
                    name="count"
                    type="number"
                    label="MOD_NEWS_SCROLLER_COUNT_LABEL"
                    description="MOD_NEWS_SCROLLER_COUNT_DESC"
                    default="6"
                    min="1"
                    step="1"
                />
                <field
                    name="featured"
                    type="radio"
                    label="MOD_NEWS_SCROLLER_FEATURED_LABEL"
                    description="MOD_NEWS_SCROLLER_FEATURED_DESC"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="image_width"
                    type="number"
                    label="MOD_NEWS_SCROLLER_IMAGE_WIDTH_LABEL"
                    description="MOD_NEWS_SCROLLER_IMAGE_WIDTH_DESC"
                    default="400"
                    min="100"
                    step="10"
                    append="px"
                />
            </fieldset>
        </fields>
    </config>
</extension>